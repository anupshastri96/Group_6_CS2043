<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="hotel.UI.Staff.listStaysController">
    <padding>
        <Insets top="10" right="20" bottom="20" left="20"/>
    </padding>
    <TableView fx:id="stayTableView">
            <columns>
                <TableColumn text="Stay ID" fx:id="stayIdColumn"/>
                <TableColumn text="Guest Name" fx:id="guestNameColumn"/>
                <TableColumn text="Room Number" fx:id="roomNumberColumn"/>
                <TableColumn text="Invoice Total" fx:id="invoiceTotalColumn"/>
                <TableColumn text="Cancelled Flag" fx:id="cancelledFlagColumn"/>
                <TableColumn text="Check-in Date" fx:id="checkinDateColumn"/>
                <TableColumn text="Checkout Date" fx:id="checkoutDateColumn"/>
            </columns>
        </TableView>
        <Button text="Exit" onAction="#processExitStaff"/>
</VBox>
